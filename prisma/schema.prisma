datasource db {
    provider = "postgres"

    url = env("DATABASE_URL_WITH_SCHEMA")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id          Int           @id @default(autoincrement())
    firs_name   String
    middle_name String
    last_name   String
    email       String        @unique
    nickname    String        @unique
    password    String
    sity        String?
    work        String?
    skills      String?
    avatar      String?
    createat_at DateTime?
    update_at   DateTime?
    creditcard  Credit_card[]
}

model Credit_card {
    id     Int     @id @default(autoincrement())
    User   User?   @relation(fields: [userId], references: [id])
    userId Int?
    bank   String
    valid  Boolean
}
